# CareerVault API Configuration - DynamoDB + Simple JWT Architecture
# Copy this to .env and configure with your actual values

# Environment
ENVIRONMENT=development

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=ap-south-1

# DynamoDB Tables
DYNAMODB_JOBS_TABLE=CareerVault-Jobs
DYNAMODB_USERS_TABLE=CareerVault-Users

# Google Gemini AI Configuration
GEMINI_API_KEY=

# Application Settings
DEBUG=true
LOG_LEVEL=info

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings (optional)
JWT_SECRET_KEY=fallback_secret_for_dev_only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development Database Settings (for local DynamoDB if needed)
DYNAMODB_ENDPOINT_URL=http://localhost:8000
USE_LOCAL_DYNAMODB=false
