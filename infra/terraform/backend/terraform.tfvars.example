# ===================================================================
# CareerVault Backend Infrastructure Configuration
# ===================================================================

# Basic Configuration
project_name = "CareerVault"
environment  = "production"
aws_region   = "ap-south-1"

# EC2 Configuration
instance_type    = "t3.small"
min_size         = 1
max_size         = 3
desired_capacity = 2

# RDS Configuration
db_instance_class = "db.t3.micro"

# Security Configuration
key_name = ""  # Add your EC2 key pair name for SSH access

# API Keys (Set via environment variables or AWS CLI)
# gemini_api_key = "your-gemini-api-key-here"

# ===================================================================
# Usage Instructions:
# ===================================================================
# 1. Copy this file to terraform.tfvars
# 2. Update the values according to your requirements
# 3. Set sensitive variables via environment variables:
#    export TF_VAR_gemini_api_key="your-api-key"
# 4. Run: terraform init && terraform plan && terraform apply
# ===================================================================

# Production Environment Example:
# project_name = "CareerVault"
# environment  = "production"
# aws_region   = "ap-south-1"
# instance_type = "t3.medium"
# min_size = 2
# max_size = 6
# desired_capacity = 3
# db_instance_class = "db.t3.small"

# Development Environment Example:
# project_name = "CareerVault"
# environment  = "development"
# aws_region   = "ap-south-1"
# instance_type = "t3.micro"
# min_size = 1
# max_size = 2
# desired_capacity = 1
# db_instance_class = "db.t3.micro"
